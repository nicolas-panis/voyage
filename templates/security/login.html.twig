{% extends 'base.html.twig' %}

{% block title %}Connexion | Travel Stars{% endblock %}

{% block body %}
<div class="flex flex-col m-h-[62.5vh] w-full items-center px-4">
    <div class="mt-8 max-w-sm w-full p-4 bg-white border-gray-200 rounded-lg shadow sm:p-6 md:p-8">
        <form method="post" class="space-y-4">
            <h1 class="text-center text-xl font-medium text-emerald-900">Veuillez-vous connecter</h1>
            <div>
                <label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="email" required autofocus>
            </div>
            <div>
                <label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-900">Password</label>
                <input type="password" name="password" id="inputPassword" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}

            
            <div class="flex items-start">
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="remember" type="checkbox" name="_remember_me" value="" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300">
                    </div>
                    <label for="remember" class="ml-2 text-xs font-medium text-gray-900">Se souvenir de moi</label>
                </div>
                <a href="#" class="ml-auto text-xs text-blue-700 hover:underline">Mot de passe oubli√©?</a>
            </div>

            <button type="submit" class="text-white bg-gradient-to-r from-emerald-700 via-emerald-800 to-emerald-900 hover:bg-gradient-to-l  font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 w-full">Connexion</button>
            <div class="text-sm font-medium text-gray-500 dark:text-gray-300">
            Not registered? <a href="{{path('register')}}" class="text-blue-700 hover:underline dark:text-blue-500">Create account</a>
        </div>
        </form>
    </div>
</div>
{% endblock %}
