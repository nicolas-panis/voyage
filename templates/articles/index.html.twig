{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
<div class="flex flex-col m-h-[62.5vh] w-full items-center px-4">
    <div class = "flex flex-col gap-5 items-center w-full sm:flex-row flex-wrap sm:justify-evenly md:flex-col">
    {% for articles in articles %}
                <div class="bg-white border-gray-200 rounded-2xl shadow-2xl w-11/12 sm:w-5/12 md:hidden">
                    <a href="#"><img class="rounded-t-xl w-full" src="{{ asset('assets/img/logo.png') }}" alt="" /></a>
                    <div class="p-5">
                        <a href="#"><h5 class="mb-2 text-lg font-medium tracking-tight text-gray-900">{{articles.title}}</h5></a>
                        <p class=" test mb-3 font-light text-sm text-gray-700 dark:text-gray-400">{{articles.content|slice(0,150) ~ "..."}}</p>
                        <a href="{{ path('articles_show', {'slug': articles.slug}) }}" class="text-white bg-gradient-to-r from-emerald-700 via-emerald-800 to-emerald-900 hover:bg-gradient-to-l  font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 w-full">Afficher article</a>
                    </div>
                </div>
                
                <a href="{{ path('articles_show', {'slug': articles.slug}) }}" class="hidden items-center bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 md:flex w-11/12 h-64 xl:w-8/12">
                    <img class="object-cover w-full rounded-t-lg h-full md:w-1/3 md:rounded-none md:rounded-l-lg" src="{{ asset('assets/img/logo.png') }}" alt="">
                    <div class="flex flex-col justify-between p-4 leading-normal">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{articles.title}}</h5>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{articles.content|slice(0,150) ~ "..."}}</p>
                    </div>
                </a>
    {% endfor %}
    </div>
</div>

{% endblock %}
