{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
<div class="flex flex-col m-h-[62.5vh] w-full items-center px-4 mt-5">
    <div class = "flex flex-col gap-5 items-center w-full">
    {# <div class = "flex flex-col gap-5 justify-center w-full"> #}
    {% for articles in articles %}

                <div class="max-w-sm bg-slate-200 border-gray-200 rounded-lg shadow-2xl dark:bg-gray-800 dark:border-gray-700">
                    <a href="#"><img class="rounded-t-lg h-56 w-full" src="{{ asset('assets/img/logo.jpg') }}" alt="" /></a>
                    <div class="p-5">
                        <a href="#"><h5 class="mb-2 text-lg font-medium tracking-tight text-gray-900 dark:text-white">{{articles.title}}</h5></a>
                        <p class=" test mb-3 font-light text-sm text-gray-700 dark:text-gray-400">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
                        <a href="{{ path('articles_show', {'slug': articles.slug}) }}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-emerald-900 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Afficher article</a>
                    </div>
                </div>
                {# </div> #}

    {% endfor %}
    </div>
</div>

{% endblock %}
